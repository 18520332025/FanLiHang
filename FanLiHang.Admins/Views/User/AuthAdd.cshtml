@model FanLiHang.Model.UserAuthorization

<section class="content ifram-content">
    <form asp-action="AuthEdit" id="AuthEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="UserID" />
        </div>
        <div class="form-group">
            <label asp-for="AppInfoID" class="col-sm-3 control-label"></label>
            <app-info-drop-down-list selected="@Model.AppInfoID" class="form-control" name="AppInfoID" id="AppInfoID"></app-info-drop-down-list>
            <span asp-validation-for="AppInfoID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginID" class="col-sm-3 control-label"></label>
            <input asp-for="LoginID" class="form-control" />
            <span asp-validation-for="LoginID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-sm-3 control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartmentID" class="col-sm-3 control-label"></label>
            <department-drop-down selected="Model.DepartmentID" class="form-control" name="DepartmentID" id="DepartmentID"></department-drop-down>
            <span asp-validation-for="DepartmentID" class="text-danger"></span>
        </div>
    </form>
    <div style="margin:0 auto;text-align:center">
        <button type="button" class="btn btn-danger modelSub" onclick="submit()">保 存</button>
    </div>
</section>
<script type="text/javascript">
    function submit() {
        $("#AuthEdit").ajaxSubmit({
            url: '/user/authSave',
            success: function () {
                modelMessage('保存成功');
                window.parent.location.reload(true);
            }
        });
    }

   
</script>