@model PagerResultSet<UserInfo>
<section class="content ifram-content">
    <button type="submit" class="btn btn-info" onclick="modelIfram('/User/Add',{height:550,title:'新建机构'})">新建用户</button>
    @if (Model.Rows.Count > 0)
    {
        <table class="table table-bordered  dataTable" style="border-color:#eee">
            <thead>
                <tr role="row">
                    <th><input type="checkbox" /></th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].ID)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].PhotoUrl)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Phone)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Email)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Cornet)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Address)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].QQ)</th>
                    <th>@Html.DisplayNameFor(x => x.Rows[0].Domicile)</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Rows)
                {
                    <tr role="row">
                        <td><input type="checkbox" /></td>
                        <td>@user.ID</td>
                        <td><img src="@user.PhotoUrl" class="img-circle" style="max-width:50px;height:auto" /></td>
                        <td>@user.Name</td>
                        <td>@user.Phone</td>
                        <td>@user.Email</td>
                        <td>@user.Cornet</td>
                        <td>@user.Address</td>
                        <td>@user.QQ</td>
                        <td>@user.Domicile</td>
                        <td>
                            <edit-label id="@user.ID" model-height="550"></edit-label>
                            <edit-label id="@user.ID" model-height="550" action-name="SetAuth" text="帐号管理"></edit-label>
                            <delete-label id="@user.ID"></delete-label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
@{await Html.RenderPartialAsync("Pager", Model.Pager);}