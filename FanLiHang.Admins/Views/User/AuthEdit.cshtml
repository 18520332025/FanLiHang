@model FanLiHang.Model.UserAuthorization

<section class="content ifram-content">
    <form asp-action="AuthEdit" id="AuthEdit" data-val-true="ture">
        <div asp-validation-summary="ModelOnly" class="bg-red-active color-palette"></div>
        <div class="form-group">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="UserID" />
        </div>
        <div class="form-group">
            <label asp-for="AppInfoID"></label>
            <span asp-validation-for="AppInfoID" ></span>
            <app-info-drop-down-list selected="@Model.AppInfoID"  class="form-control" asp-validation-remote="@(Model)" name="AppInfoID" id="AppInfoID" asp-for="@Model.AppInfoID"></app-info-drop-down-list>
        </div>
        <div class="form-group">
            <label asp-for="LoginID"></label>
            <span asp-validation-for="LoginID"  asp-validation-romate-message=""></span>
            <input asp-for="LoginID" asp-validation-remote="@(Model)" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DepartmentID"></label>
            <span asp-validation-for="DepartmentID"></span>
            <department-drop-down selected="Model.DepartmentID" class="form-control" name="DepartmentID" id="DepartmentID"></department-drop-down>

        </div>
    </form>
    <div style="margin:0 auto;text-align:center">
        <button type="button" class="btn btn-danger modelSub" onclick="submit()">保 存</button>
    </div>
</section>
<script type="text/javascript">
    function submit() {
        $("#AuthEdit").ajaxSubmit({
            url: '/user/authSave',
            success: function () {
                modelMessage('保存成功');
                window.parent.location.reload(true);
            }
        });
    }

    $(function () {
        $("#AuthEdit").valid();
    })
</script>