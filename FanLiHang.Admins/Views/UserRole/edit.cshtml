@model UserPower
<section class="content ifram-content">
    <form class="form-horizontal" id="roleForm" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label  class="col-sm-3 control-label">选择角色</label>
            <div class="col-sm-8">
                <role-drop-down-list selected="@Model.RoleID" Name="RoleID"></role-drop-down-list>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="UserAuthorizationID" />
            </div>
        </div>
    </form>
    <div style="margin:0 auto;text-align:center">
        <button type="button" class="btn btn-danger modelSub" onclick="submit()">保 存</button>
    </div>
</section>
<script type="text/javascript">
    function submit() {
        $("#roleForm").ajaxSubmit({
            url: '/userRole/save',
            success: function () {
                modelMessage('保存成功');
                window.parent.reloadThisPage();
            }
        });
    }
</script>